<%- include('../partials/_head', { title: transaction.title, styles: ['/styles/transactions.css'] }) %>
  <body>
    <%- include('../partials/_navbar') %>
    <main id="maincontent" class="transactions-list container">
      <div class="card">
        <h1><%= transaction.title %></h1>
        <p>Amount: <%= transaction.amount %></p>
        <p>Date: <%= transaction.date.toDateString() %></p>
        <p>Category: <%= transaction.category %></p>
        <p>Notes: <%= transaction.notes %></p>
        <div style="display: flex; gap: 0.5rem; margin-top: 1rem">
          <a class="btn" href="/transactions/<%= transaction._id %>/edit">Edit</a>
          <form action="/transactions/<%= transaction._id %>?_method=DELETE" method="post">
            <% if (csrfToken) { %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <% } %>
            <button class="btn btn--secondary" type="submit">Delete</button>
          </form>
        </div>
      </div>
    </main>
    <script src="/js/main.js" defer></script>
  </body>
</html>
